<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/LoftActionMode</item>
    </style>

    <style name="splashScreenTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/moneytracker</item>
    </style>

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Container.Background">
        <item name="android:background">@drawable/background_3</item>
    </style>

    <style name="Container_land">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="Fragments">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="LoftActionMode" parent="Base.Widget.AppCompat.ActionMode">
        <item name="background">@color/primary</item>
        <item name="backgroundSplit">@color/primary</item>
    </style>

</resources>
