<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/logo_top_margin"
        android:src="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/etLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/side_margins"
        android:layout_marginRight="@dimen/side_margins"
        android:layout_marginTop="40dp"
        android:hint="@string/lbl.registration.login"
        android:inputType="text"
        android:maxLength="10"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/side_margins"
        android:layout_marginRight="@dimen/side_margins"
        android:layout_marginTop="20dp"
        android:hint="@string/lbl.registration.password"
        android:inputType="textPassword"
        android:maxLength="14" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/side_margins"
        android:layout_marginRight="@dimen/side_margins"
        android:layout_marginTop="25dp"
        android:background="@color/primary"
        android:text="@string/lbl.button.login"
        android:textColor="@color/background" />
</LinearLayout>